<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <title>规则编辑页面</title>
    <script type="text/javascript" src="${ctxPath}/medias/RX.load.js"></script>
    <script type="text/javascript">
        RX.loadCSS({template: "platMain"});
    </script>
    <style>
        html, body {
            height: 100%;
            overflow: hidden;
            background: #fff;
        }

        .explain {
            color: red !important;
        }
    </style>
</head>

<body>

<div class="form_box">
    <div class="page_title">
        <h1>规则基本信息</h1>
    </div>
    <table class="form" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <th><b>*</b>规则名称</th>
            <td>
                <div class="element_box">
                    <input type="text" class="i_text" data-model="ModelRule" data-property="rule_name"/>
                </div>
            </td>
            <th><b>*</b>规则类型</th>
            <td>
                <div class="element_box">
                    <select class="i_select" data-model="ModelAuthRule" data-property="gzlx"/>
                    <option value=""></option>
                    </select>
                </div>
            </td>
            <th><b>*</b>实现方式</th>
            <td>
                <div class="element_box">
                    <select class="i_select" data-model="ModelRule" data-property="sxfs"/>
                    <option value=""></option>
                    </select>
                </div>
            </td>
        </tr>
        <tr>
            <th class="explain">说明</th>
            <td colspan="5" class="explain">
                <div class="element_box">
                    <span id="xxsm"></span>
                </div>
            </td>
        </tr>
        <tr>
            <th><b>*</b>实现细节</th>
            <td colspan="5">
                <div class="element_box">
                    <textarea name="" rows="" cols="" class="i_textarea" data-model="ModelRule"
                                                   data-property="rule_detail" onblur="textareachk(this,'bzs')"
                                                   onkeyup="textareachk(this,'bzs')"></textarea>
                    <div class="txtword" id="bzs"></div>
                </div>
            </td>
        </tr>
        <tr class="dataRule" style="display: none">
            <th><b>*</b>关联对象</th>
            <td colspan="2">
                <div class="element_box">
                    <input type="text" class="i_text" data-model="ModelAuthRule" data-property="objectName"/>
                    <input type="hidden" data-model="ModelAuthRule" data-property="objectId"/>
                </div>
            </td>
            <th><b>*</b>权限类型</th>
            <td colspan="2">
                <div class="element_box">
                    <select class="i_select" data-model="ModelAuthRule" data-property="qxlx"/>
                    <option value=""></option>
                    </select>
                </div>
            </td>
        </tr>
        <tr class="dataRule" style="display: none">
            <th>所属页面</th>
            <td colspan="5">
                <div class="element_box">
                    <input type="text" class="i_text" data-model="ModelAuthRule" data-property="pageNames"/>
                    <input type="hidden" data-model="ModelAuthRule" data-property="pageIds"/>
                </div>
            </td>
        </tr>
        <tr>
            <th>简述</th>
            <td colspan="5">
                <div class="element_box">
                    <textarea name="" rows="" cols="" class="i_textarea" data-model="ModelRule"
                              data-property="description"
                              onblur="textareachk(this,'bzss')" onkeyup="textareachk(this,'bzss')"></textarea>
                    <div class="txtword" id="bzss"></div>
                </div>
            </td>
        </tr>
    </table>
</div>

<!-- 下面按钮 -->
<div class="w_button_box">
    <input type="button" id="save" value="保存" class="c_button"/>
</div>
<script type="text/javascript">
    RX.load({
        template: "form",
        module: [
            "/medias/src/plat/conf/auth/rule/ruleEdit_config.js",
            "/medias/src/plat/code/auth/rule/ruleEdit.js"]
    });
</script>
</body>
</html>