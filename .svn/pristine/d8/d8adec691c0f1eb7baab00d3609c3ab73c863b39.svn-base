package net.ruixin.controller.plat.auth;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;

@Controller
@RequestMapping("/role")
public class RoleMapping {
    //角色选择弹出层
    @RequestMapping(value = "/roleSelect")
    public String roleSelect() {
        return "plat/auth/roleSelect";
    }

    //角色选择弹出层
    @RequestMapping(value = "/roleElementView")
    public String roleElementView() {
        return "plat/auth/roleElementView";
    }

    //角色查看列表
    @RequestMapping(value = "roleList")
    public String roleList() {
        return "plat/auth/roleList";
    }

    //角色编辑页面
    @RequestMapping(value = "/roleEdit")
    public String roleEdit() {
        return "plat/auth/roleEdit";
    }

    //选择页面功能权限
    @RequestMapping(value = "/pageAuthSelect")
    public String pageAuthSelect() {
        return "plat/auth/pageAuthSelect";
    }

    //角色页面权限选择
    @RequestMapping(value = "/roleAuthSelect")
    public String roleAuthSelect() {
        return "plat/auth/roleAuthSelect";
    }

    //对一个页面功能权限进行编辑
    @RequestMapping(value = "/pageAuthSelectOne")
    public String pageAuthSelectOne() {
        return "plat/auth/pageAuthSelectOne";
    }

    //角色选择关联要素
    @RequestMapping(value = "/chooseOrgan")
    public String chooseOrgan() {
        return "plat/auth/chooseOrgan";
    }

    //角色选择关联动态规则
    @RequestMapping(value = "/chooseRule")
    public String chooseRule() {
        return "plat/auth/chooseRule";
    }
}

